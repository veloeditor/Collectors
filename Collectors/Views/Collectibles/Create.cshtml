@model Collectors.Models.CollectibleCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Collectible</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Collectible.Name" class="control-label"></label>
                <input asp-for="Collectible.Name" class="form-control" />
                <span asp-validation-for="Collectible.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Collectible.Description" class="control-label"></label>
                <input asp-for="Collectible.Description" class="form-control" />
                <span asp-validation-for="Collectible.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Collectible.CollectionId" class="control-label"></label>
                <select asp-for="Collectible.CollectionId" class ="form-control" asp-items="@Model.CollectionOptions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

